<div class="row">
  <div class="col-2">
  </div>
  <div class="col-6">
    <%= form_with url: customer_path(@customer), model: @customer, method: :patch do |f| %>
      <table class="table my-3">
        <tr>
          <th><%= f.label :氏名 %></th>
          <td><%= f.text_field :last_name, autofocus: true, class:"form-control col-10" %></td>
          <td><%= f.text_field :first_name, autofocus: true, class:"form-control col-10" %></td>
        </tr>
        <tr>
          <th><%= f.label :フリガナ %></th>
          <td><%= f.text_field :last_name_kana, autofocus: true, class:"form-control col-10" %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, class:"form-control col-10" %></td>
        </tr>
        <tr>
          <th><%= f.label :郵便番号（ハイフンなし）%></th>
          <td><%= f.text_field :postal_code, autofocus: true, class:"form-control col-10" %></td>
        </tr>
        <tr>
          <th><%= f.label :住所 %></th>
          <td colspan="2"><%= f.text_field :address, autofocus: true, class:"form-control col-10" %></td>
        </tr>
        <tr>
          <th><%= f.label :電話番号（ハイフンなし） %></th>
          <td><%= f.text_field :telephone_number, autofocus: true, class:"form-control col-10" %></td>
        </tr>
        <tr>
          <th><%= f.label :email %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-10" %></td>
        </tr>
      </table>
    <%= f.submit '編集内容を保存', class:"btn btn-success my-3 ml-4 col-3" %>                <%= link_to "退会する", confirm_withdrawal_customer_path, class: "btn btn-danger" %>
    <% end %>
  </div>
  <div class="col-4"></div>
</div>