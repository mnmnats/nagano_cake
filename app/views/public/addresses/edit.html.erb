<div class="container">
 <h2>配送先編集</h2>
 <%= form_with model: @address, url: edit_address_path(address.id) do |f| %>
      <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="field address">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div><br>
      <div class="field address">
        <%= f.label :宛名 %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div><br>
      <div class="field">
      <%= f.submit "編集する", class:"btn btn-primary" %>
      </div>
      <% end %>
</div>
