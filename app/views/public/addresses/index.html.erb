<div class="container">
  <h3>配送先登録/一覧</h3>

  <%= form_with model: @address, url: addresses_path do |f| %>
  <div class="row">
    <div class="col-xs-1">
      <%= f.label :"郵便番号(ハイフンなし) 　　" %>
    </div>
    <div class="col-xs-2">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
    </div>
    <div class="row">
    <div class="col-xs-1">
      <%= f.label :住所　　　　　　　　　　　 %>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40" %>
    </div>
    </div>
    <div class="row">
    <div class="col-xs-1">
      <%= f.label :宛名　　　　　　　　　　　 %>
    </div>
    <div class="col-xs-2">
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="col-xs-1">
    <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
    <% end %>
    </div>
</div>
<table  class="table table-bordered table-secondary ">
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
            <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-primary" %>
            <%= link_to "削除する", public_address_path(address), class: "btn btn-danger" %>
            </td>
        </tr>
        <% end %>
      </table>