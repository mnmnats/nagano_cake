   <div class="row">
     <div class="col-4"></div>

    <div class="col-3">
	    <%= image_tag @item.get_image, size: "100x100" %>
      </div>
      <div class="col-5">
        <div>
          <h1><%= @item.name %></h1><br>
          <h3><%= @item.introduction %></h3><br>
          <% if @item.is_active == false %>
            <h2>¥<%= @item.add_tax_price.to_s(:delimited) %>（税込）</h2><br>
          <% else %>
            <h2>soldout</h2><br>
          <% end %>
        </div>
        <% if @item.is_active == false %>
          <%= form_with(model: @cart_item, url: cart_items_path, method: :post) do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
            <%= f.submit 'カートに入れる',class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-2">
    </div>
  </div>