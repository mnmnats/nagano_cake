<h4>ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
<h4>ジャンル名</h4>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<table>
    <thead>
        <tr>
            <th>ジャンル</th>
        </tr>
    </thead>
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td><%= link_to edit_admin_genre_path(genre.id) do %>編集する<% end %></td>

        </tr>
        <% end %>
    </tbody>
</table>