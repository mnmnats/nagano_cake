<h2 class="text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
<div class="row justify-content-center">
  <div class="row">
    <div class="col-xs-6">
      <table class="table">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %><%= @customer.first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
          <th>メ－ルアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customer.is_deleted == false %>
              有効
            <% else %>
            　退会
            <% end %>
          </th>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_customer_path,class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
      <%= link_to "注文履歴一覧を見る", root_path,class: "btn btn-primary" %>
    </div>
  </div>
</div>