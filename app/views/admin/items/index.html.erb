
<h3>商品一覧</h3>
<%= link_to "+", new_admin_item_path, class: " btn btn-default bg-light text-black", style: "border-radius: 100%" %>

<table class="table">
  <thead>
    <tr>
      <th>商品id</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == true %>販売中</td>
      <% else %>
      <td>販売停止中</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
