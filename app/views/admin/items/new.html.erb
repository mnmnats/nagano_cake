<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path do |f| %>
<h4>商品画像</h4>
<%= f.file_field :image %>
<h4>商品名</h4>
<%= f.text_field :name %>
<h4>商品説明</h4>
<%= f.text_area :introduction %>
<h4>ジャンル</h4>
<%= f.collection_select :genre_id, Genre.all, :id, :name,
    :include_blank => "選択してください" %>
<h4>税抜き価格</h4>
<%= f.text_field :price %>円
<h4>販売ステータス</h4>
<%= f.select :is_active, {'販売中': true, '販売停止中': false}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
<%= f.submit "新規登録" %>
<% end %>

