<h3>商品編集</h3>
<div class = "container" >
  <div class = "row" >
    <div class = "col">
<%= form_with model: @item, url: admin_item_path do |f| %>
<table>
  <tr><th>商品画像</th><td><%= f.file_field :image %></td></tr>
  <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
  <tr><th>商品説明</th><td><%= f.text_area :introduction %></td></tr>
  <tr><th>ジャンル</th>
  <td><%= f.collection_select :genre_id, Genre.all, :id, :name,
    :include_blank => "選択してください" %></td></tr>
  <tr><th>税抜価格</th><td><%= f.text_field :price %>円</td></tr>
  <tr><th>販売ステータス</th><td><%= f.select :is_active, {'販売中': true, '販売停止中': false}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %></td></tr>
</table>
<%= f.submit "変更を保存" %>
<% end %>
   </div>
  </div>
</div>

